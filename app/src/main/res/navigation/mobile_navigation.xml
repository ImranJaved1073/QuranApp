<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.quran.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_navigation_home_to_navigation_SurahAyats3"
            app:destination="@id/navigation_SurahAyats" />
    </fragment>

    <fragment
        android:id="@+id/navigation_SurahAyats"
        android:name="com.example.quran.VerseFragment"
        android:label="Quran"
        tools:layout="@layout/fragment_verse" >
        <action
            android:id="@+id/action_navigation_SurahAyats_to_navigation_home"
            app:destination="@id/navigation_home" />
    </fragment>

    <fragment
        android:id="@+id/navigation_Para_verse"
        android:name="com.example.quran.ParaVerseFragment"
        android:label="Para"
        tools:layout="@layout/fragment_para_verse" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.quran.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.quran.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <!-- Add the QiblaFragment here -->
    <fragment
        android:id="@+id/navigation_tasbih"
        android:name="com.example.quran.ui.TasbihFragment"
        android:label="@string/title_tasbih"
        tools:layout="@layout/fragment_tasbih" >
        <action
            android:id="@+id/action_navigation_tasbih_to_navigation_Para_verse"
            app:destination="@id/navigation_Para_verse" />
    </fragment>

    <fragment
        android:id="@+id/navigation_prayerclock"
        android:name="com.example.quran.ui.prayertime.PrayerTimeFragment"
        android:label="@string/title_prayertime"
        tools:layout="@layout/fragment_prayertime" />

    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.example.quran.ui.CalendarFragment"
        android:label="@string/title_calendar"
        tools:layout="@layout/fragment_calendar" />

    <fragment
        android:id="@+id/navigation_favourite"
        android:name="com.example.quran.ui.favourites.FavouritesFragment"
        android:label="@string/title_favourite"
        tools:layout="@layout/fragment_favourites" />

</navigation>
