<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_marginTop="@dimen/_1sdp">

    <!-- Ayah Card View -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#EEFDFCFC"
        app:cardCornerRadius="@dimen/_2sdp"
        app:cardElevation="@dimen/_1sdp"
        android:layout_margin="@dimen/_2sdp"
        app:strokeWidth="2dp">

        <!-- Enclose Ayah Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <!-- Header Row with Ayah Number and Overflow Menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Ayah Number Label -->
                <TextView
                    android:id="@+id/ayahNumberLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="113:113"
                    android:fontFamily="@font/ubuntu"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:gravity="center_vertical"/>

                <!-- Space for overflow menu -->
                <Space
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <!-- Overflow Menu Button -->
                <ImageView
                    android:id="@+id/overflowMenuButton"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_overflow_menu"
                    android:layout_gravity="end"/>
            </LinearLayout>

            <!-- Ayah Arabic Text -->
            <TextView
                android:id="@+id/ayahArabicText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/noorehuda"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="@dimen/_4sdp"
                android:text="بِسْمِ اللَّهِ الرَّحْمَنِ الرَّحِيمِ"
                android:textAlignment="center"
                android:textColor="@color/blue"
                android:textSize="@dimen/_17ssp"
                tools:ignore="RtlCompat" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@android:drawable/divider_horizontal_dark"
                android:backgroundTint="@color/black" />

            <!-- English Translation -->
            <TextView
                android:id="@+id/ayahEnglishTranslation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/ubuntu"
                android:gravity="clip_horizontal"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="8dp"
                android:text="In the name of Allah, the Most Gracious, the Most Merciful."
                android:textColor="@color/englishcolor"
                android:textSize="@dimen/_10sdp" />

            <!-- Urdu Translation -->
            <TextView
                android:id="@+id/ayahUrduTranslation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/jameelnoorinastaleeq"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:lineSpacingExtra="8dp"
                android:text="شروع الله کا نام لے کر جو بڑا مہربان نہایت رحم والا ہے"
                android:textAlignment="center"
                android:textColor="@color/green"
                android:textSize="@dimen/_11sdp"
                tools:ignore="RtlCompat" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>
