<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">



        <TextView
            android:id="@+id/surahNumber"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="@mipmap/islamic_star_foreground"
            android:backgroundTint="#588B76"
            android:gravity="center"
            android:text="114"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/surahEnglishName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Al-Fatiha"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/primaryTextColor"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/surahVerses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MECCAN • 7 VERSES"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/secondaryTextColor" />
        </LinearLayout>

        <TextView
            android:id="@+id/surahArabicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/al_qalam"
            android:text="الفاتحة"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/green"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
